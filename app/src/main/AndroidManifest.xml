<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.movielist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:logo="@drawable/logo"
        android:title="@string/app_name"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_small"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivitySplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityMain"
            android:exported="true">
        </activity>
        <activity
            android:name=".ActivityMovieListPager"
            android:parentActivityName=".ActivityMain"
            android:exported="true">
        </activity>
        <activity android:name=".ActivityAbout"
            android:parentActivityName=".ActivityMain"
            android:exported="true"
            android:label="About"></activity>
    </application>

</manifest>